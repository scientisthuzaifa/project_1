
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<style>
    .custom-card {
        background-color: #0b132b;
        color: white;
        border: none;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.3);
        padding: 20px;
        height: 100%;
    }

        .custom-card h3.card-title {
            font-size: 24px;
            margin-bottom: 15px;
        }

        .custom-card p.card-text {
            font-size: 18px;
        }

        .custom-card a.btn-primary {
            background-color: #2a9d8f;
            border-color: #2a9d8f;
        }

            .custom-card a.btn-primary:hover {
                background-color: #1a7a6c;
                border-color: #1a7a6c;
            }
</style>


<div class="row">
    <div class="col-5 m-4 ml-5">
        <div class="card custom-card">
            <div class="card-body">
                <h3 class="card-title text-white">Activate Contest Form</h3>
                <p class="card-text">If you want to activate the contest form, click the button below:</p>
                <a href="@Url.Action("ActivateForm", "Admin")" class="btn btn-primary btn-lg btn-block">Activate Form</a>
            </div>
        </div>
    </div>
    <div class="col-5 ml-5 my-4">
        <div class="card custom-card">
            <div class="card-body">
                <h3 class="card-title text-white">Deactivate Contest Form</h3>
                <p class="card-text">If you want to deactivate the contest form, click the button below:</p>
                <a href="@Url.Action("DeactivateForm", "Admin")" class="btn btn-primary btn-lg btn-block">Deactivate Form</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-5 m-4 ml-5">
        <div class="card custom-card">
            <div class="card-body">
                <h3 class="card-title text-white">Activate Winner form</h3>
                <p class="card-text">If you want to activate the contest form, click the button below:</p>
                <a href="@Url.Action("ActivateWinner", "Admin")" class="btn btn-primary btn-lg btn-block">Activate Form</a>
            </div>
        </div>
    </div>
    <div class="col-5 ml-5 my-4">
        <div class="card custom-card">
            <div class="card-body">
                <h3 class="card-title text-white">Deactivate Winner form</h3>
                <p class="card-text">If you want to deactivate the contest form, click the button below:</p>
                <a href="@Url.Action(" DeactivateWinner", "Admin")" class="btn btn-primary btn-lg btn-block">Deactivate Form</a>
            </div>
        </div>
    </div>
</div>