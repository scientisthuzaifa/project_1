@model IEnumerable<Aptech_Final_E_project.Context.contestDB>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}


<style>
    div.dataTables_wrapper div .dataTables_length select {
        width: 60px;
        display: inline-block
    }
</style>



<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">

            <h2 class="text-center">Show FAQS</h2>
        </div>
        <div class="col-md-6 text-right">

        </div>
    </div>
    <table id="myTable" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ingradient)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CookingProcess)
                </th>
                <th>
                    winner
                </th>
                <th>
                    show winner
                </th>


                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ingradient)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CookingProcess)
                    </td>


                    <td>
                        winner
                    </td>
                    <td>
                       
                    </td>

                    <td>

                        @using (Html.BeginForm("Winner", "Home", new { id = item.Id}, FormMethod.Post))
                        {
                            
                            @Html.AntiForgeryToken()
                            <style>
                                .yellow-button {
                                    background-color: yellow;
                                    color: black; /* You can change the text color to your preference */
                                    border: none;
                                    padding: 10px 20px; /* Adjust padding as needed */
                                    cursor: pointer;
                                }
                            </style>

                           
                                <!-- Your form inputs go here -->
                                <input type="hidden" name="UserId" value="@item.userid" />
                                <input type="submit" name="name" value="Submit" class="yellow-button" />
                           

                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>

<!-- Include jQuery and DataTables JavaScript -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>



